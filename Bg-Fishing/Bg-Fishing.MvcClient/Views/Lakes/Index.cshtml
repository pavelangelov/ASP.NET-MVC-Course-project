@model Bg_Fishing.Models.Lake
@{
    ViewBag.Title = "Язовир - " + @Model.Name;
}

<div class="container">
    <h3 class="text-center">Язовир - @Model.Name</h3>
    <div class="col-sm-5">
        <h5 class="text-center">Местоположение</h5>
        <div id="map" style="width:400px;height:400px;background:yellow"></div>
    </div>
    <div class="col-sm-6">
        <h5 class="text-center">Информация</h5>
        <p>@Model.Info</p>
        <hr />
        <h5 class="text-center">Налична риба в язовира</h5>
        <p>
            @foreach (var fish in Model.Fish)
            {
                <div>
                    <a href="/fish/details/@fish.Name">@fish.Name</a>
                </div>
            }

        </p>
    </div>

    <div class="col-sm-11">
        <h4 class="text-center">
            <a id="load-comments" class="btn" data-page="1">Зареди последни мнения за този язовир</a>
            @if (User.Identity.IsAuthenticated)
            {
                <span> или </span>
                <a id="load-comment-add" class="btn">Добави ново мнение</a>
            }
        </h4>
        <ul id="comments"></ul>
    </div>
</div>

@section PageScripts {
    <script>
        let lat = @Model.Location.Latitude,
            long = @Model.Location.Longitude;
    </script>
    <script src="~/Scripts/page-scripts/show-location.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDeGSalPydnhkGJ062cG7fWICeCJrS2zm4&callback=myMap"></script>
    }